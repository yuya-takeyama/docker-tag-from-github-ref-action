{
  "name": "@yuya-takeyama/docker-tag-from-github-ref-action",
  "version": "1.0.0",
  "private": true,
  "description": "A GitHub Action to generate a Docker tag from github.ref",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuya-takeyama/docker-tag-from-github-ref-action.git"
  },
  "keywords": [
    "actions",
    "docker",
    "tag"
  ],
  "author": "Yuya Takeyama",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/github": "4.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.32",
    "@typescript-eslint/parser": "^4.16.1",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.21.0",
    "eslint-plugin-github": "4.1.2",
    "eslint-plugin-jest": "24.1.8",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "24.9.0",
    "jest-circus": "26.6.3",
    "js-yaml": "4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "24.3.0",
    "typescript": "4.2.3"
  }
}
